//--------------------------------------------//
//- 1.0 Default Alerts
//--------------------------------------------//
mixin alert(alert_class, icon, alert_title, alert_desc, link_url, link_desc)
	div(
		class="alert fade show"
		class=alert_class
	)
		div(
			class="alert__icon"
		)
			i(
				class=icon
			)
		div(
			class="alert__content"
		)
			button(
				type="button"
				class="alert--close btn--close"
				data-dismiss="alert"
				aria-label="Close"
			)
				span(
					aria-hidden="true"
				) &times;
			strong(
				class="alert__title"
			) #{alert_title}
			span(
				class="alert__desc"
			) #{alert_desc}
			if link_desc != null
				a(
					href=link_url
					class="alert__link"
				) #{link_desc}

//--------------------------------------------//
//- 2.0 Alerts with box icon 
//--------------------------------------------//
mixin alert_box(alert_class, icon, alert_title, alert_desc, link_url, link_desc)
	+alert("alert--box " + alert_class, icon, alert_title, alert_desc, link_url, link_desc)

//--------------------------------------------//
//- 3.0 Alerts with circle icon
//--------------------------------------------//
mixin alert_circle(alert_class, icon, alert_title, alert_desc, link_url, link_desc)
	+alert("alert--circle " + alert_class, icon, alert_title, alert_desc, link_url, link_desc)

