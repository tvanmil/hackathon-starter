//--------------------------------------------//
//- 6.0 Alert Shadow
//--------------------------------------------//
mixin alert_shadow(alert_class, icon, alert_title, alert_desc, link_url, link_desc)
	+alert("alert--circle alert--shadow " + alert_class, icon, alert_title, alert_desc, link_url, link_desc)