//--------------------------------------------//
//- 6.0 Pager Previous
//--------------------------------------------//
mixin pagination_previous(pagination_class, previous_icon, previous_link)
	li.pagination__item
		a.pagination__link(href=previous_link)
			i(
				class=previous_icon
			)
			span(
				class="link__previous"
			) Previous

//--------------------------------------------//
//- 7.0 Pager Next
//--------------------------------------------//
mixin pagination_next(pagination_class, next_icon, next_link)
	li.pagination__item
		a.pagination__link(href=next_link)
			span(
				class="link__next"
			) Next
			i(
				class=next_icon
			)