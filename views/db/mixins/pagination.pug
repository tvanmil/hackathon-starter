//--------------------------------------------//
//- 1.0 Paginaton Default
//--------------------------------------------//
mixin pagination(pagination_class, pagination_obj ,pagination_controls, pagination_control_icon, pagination_previous_href, pagination_next_href)
	nav
		ul(
			class="pagination " + pagination_class
		)
			if pagination_controls === true
				li.pagination__item
					a(
						href=pagination_previous_href
						class="pagination__link"
					)
						if pagination_control_icon === true
							span(
								aria-hidden="true"
							) &laquo;
							span.sr--only
								| Previous
						else
							| Previous
				each page_item, index in pagination_obj
					li.pagination__item
						a(
							href=page_item
							class="pagination__link"
						)= index
				li.pagination__item
					a(
						href=pagination_next_href
						class="pagination__link"
					)
						if pagination_control_icon === true
							span(
								aria-hidden="true"
							) &raquo;
							span.sr--only
								| Next
						else
							| Next
			else 
				each page_item, index in pagination_obj
					li.pagination__item
						a(
							href=page_item
							class="pagination__link"
						)= index

