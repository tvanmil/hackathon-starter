		+card_heading_part(card_title, card_desc)
		block
		+card_body_part()

//--------------------------------------------//
//- 9.0 Card Style 3
//--------------------------------------------//
mixin card_style_3(card_class, card_title, card_desc)
	.card(
		class="card--style--3 " + card_class
	)
		+card_heading_part(card_title, card_desc)
		block
		+card_body_part()

//--------------------------------------------//
//- 8.0 Card with Tools
//--------------------------------------------//
mixin card_tools(card_class, card_title, card_desc)
	.card(
		class="card__tools " + card_class
	)
		block
		+card_heading_part(card_title, card_desc)
			+card_tools_part()
		+card_body_part()