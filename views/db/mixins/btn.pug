//- ------------------------------------------------------//
//- 1.0 Btn
//- ------------------------------------------------------//
mixin btn(btn_type, btn_class, btn_text, btn_url, btn_icon)
	if btn_url != null
		a(
			href=btn_url
			class="btn " + btn_class
		) #{btn_text}
			if btn_icon != null
				i(
					class=btn_icon
				)
	else
		button(
			type=btn_type
			class="btn " + btn_class
		) #{btn_text}
			if btn_icon != null
				i(
					class=btn_icon
				)

