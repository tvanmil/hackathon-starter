//- 2.0 Btn Pill
//- ------------------------------------------------------//
mixin btn_pill(btn_type, btn_class, btn_text, btn_url, btn_icon)
	+btn(btn_type, "btn--pill " + btn_class, btn_text, btn_url, btn_icon)

